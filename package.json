{
  "name": "@plust/datasleuth",
  "version": "1.0.0",
  "description": "Deep research tool for gathering and synthesizing information with AI",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "doc": "docs",
    "example": "examples",
    "test": "tests"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "dev": "tsc --watch",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "jest --json --outputFile=test-output.json",
    "test:console": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --json --outputFile=coverage-output.json",
    "example:basic": "ts-node examples/basic-research.ts",
    "example:advanced": "ts-node examples/advanced-research.ts",
    "example:orchestration": "ts-node examples/orchestration-research.ts",
    "example:comprehensive": "ts-node examples/comprehensive-research.ts",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jacques2Marais/datasleuth.git"
  },
  "keywords": [
    "research",
    "ai",
    "llm",
    "information",
    "search",
    "pipeline",
    "orchestration"
  ],
  "author": "Jacques Marais",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Jacques2Marais/datasleuth/issues"
  },
  "homepage": "https://github.com/Jacques2Marais/datasleuth#readme",
  "dependencies": {
    "@plust/search-sdk": "^1.0.0",
    "ai": "^4.3.15",
    "axios": "^1.9.0",
    "cheerio": "^1.0.0",
    "mastra": "^0.6.1",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^9.26.0",
    "jest": "^29.7.0",
    "ollama-ai-provider": "^1.2.0",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
